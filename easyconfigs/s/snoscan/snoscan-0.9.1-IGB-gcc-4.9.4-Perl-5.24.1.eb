easyblock = 'MakeCp'

name = 'snoscan'
version = '0.9.1'
versionsuffix = '-Perl-%(perlver)s'

homepage = 'http://lowelab.ucsc.edu/snoscan/'
description = """Search for C/D box methylation guide snoRNA genes in a genomic sequence"""

toolchain = {'name': 'IGB-gcc', 'version': '4.9.4'}

sources = ['%(name)s-%(version)s.tar.gz']
source_urls = ['http://lowelab.ucsc.edu/software/']

dependencies = [
	('Perl','5.24.1'),
]

keepsymlinks = True

with_configure = False

squidver = '1.5.11'
prebuildopts = 'cd squid-%s && make && cd .. && ' % squidver

files_to_copy = ['*']

sanity_check_paths = {
	'files': ['scan-yeast','snoscan'],
	'dirs': ['squid-%s' % squidver],
}

modextrapaths = {
}

moduleclass = 'bio'
